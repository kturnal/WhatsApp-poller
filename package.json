{
  "name": "whatsapp-poller",
  "version": "0.1.0",
  "description": "Weekly WhatsApp game-time poll bot for a fixed friend group",
  "license": "MIT",
  "private": true,
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "doctor": "node src/doctor.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "node --test test/unit/*.test.js",
    "test:integration": "node --test test/integration/*.test.js",
    "security:audit": "npm audit --audit-level=high"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.3.1",
    "luxon": "^3.5.0",
    "node-cron": "^4.2.1",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.34.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.2",
    "globals": "^16.5.0",
    "prettier": "^3.5.3"
  }
}
