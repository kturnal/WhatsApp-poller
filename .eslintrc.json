{
  "root": true,
  "env": {
    "es2022": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "rules": {
    "no-console": "off"
  },
  "overrides": [
    {
      "files": ["test/**/*.js"],
      "env": {
        "node": true
      }
    }
  ]
}
